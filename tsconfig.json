{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": "./",                  
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "sourceMap": true                        
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "gatsby-config.mjs", "./plugins/**/*"],
  "exclude": ["node_modules", "public", ".cache"],
}
